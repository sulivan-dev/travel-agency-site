extends ../layout/index
block content
  main.container.mt-5
    .row
      .col-md-5
        img(src=`/img/${travel.image}_lg.jpg`, alt="About us", class="img-fluid")
      .col-md-7
        h1 #{travel.title}
        p
          i.fas.fa-calendar-alt
          |  Fecha Salida: #{travel.departure_date} - Fecha Regreso: #{travel.return_date}
        p
          i.fas.fa-dollar-sign
          |  #{travel.price}
        p
          i.fas.fa-users
          |  #{travel.available} Disponibles
        p #{travel.description}
