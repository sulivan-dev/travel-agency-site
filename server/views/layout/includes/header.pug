          a(href="/")
            img(src="/icons/logo.svg", class="img-fluid" alt="Logo Agencia de Viajes")
        .col-6.col-md-8
          nav.nav.justify-content-center.justify-content-md-end
            a.nav-link(href="/nosotros", class=(route === '/nosotros' ? 'active' : '')) Nosotros
            a.nav-link(href="/viajes", class=(route === '/viajes' ? 'active' : '')) Viajes
